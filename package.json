{
  "name": "@ncukondo/academic-fulltext",
  "version": "0.1.0",
  "description": "OA discovery, PDF/XML download, and PMC JATS XML to Markdown conversion for academic articles",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "biome check src/",
    "lint:fix": "biome check --write src/",
    "prepublishOnly": "npm run build"
  },
  "engines": {
    "node": ">=22"
  },
  "dependencies": {
    "any-ascii": "^0.3.3",
    "fast-xml-parser": "^5.3.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "@types/node": "^25.2.2",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ncukondo/academic-fulltext.git"
  }
}
